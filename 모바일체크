<script language="JavaScript">
            <!-- 모바일용 페이지로 이동 -->
             var agent = navigator.userAgent;
             var mobileList = ["iPhone" , "Android", "Windows CE"];
             for(var i=0; i<mobileList.length; i++) {
  if (navigator.userAgent.indexOf(mobileList[i]) != -1) {                        document.location = "http://m.xxxx.com"; 
 //mobileList 에있는 기기 일경우 해당  URL로 location 한다.
                        }
            }
</script>
